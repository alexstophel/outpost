<div id="<%= dom_id(message) %>" class="flex gap-3 px-4 py-2 hover:bg-neutral-900/50">
  <div class="w-8 h-8 bg-neutral-700 border border-neutral-600 flex-shrink-0 flex items-center justify-center text-xs text-neutral-400">
    <%= message.user.email_address.first.upcase %>
  </div>
  <div class="min-w-0 flex-1">
    <div class="flex items-baseline gap-2">
      <span class="text-sm font-medium text-neutral-200"><%= message.user.email_address.split('@').first %></span>
      <span class="text-xs text-neutral-600"><%= message.created_at.strftime("%l:%M %p").strip %></span>
    </div>
    <div class="text-neutral-300 break-words whitespace-pre-wrap"><%= message.body %></div>
  </div>
</div>
